<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tp.dao.mmp.TopicPromoterChangeDao">
	<resultMap type="com.tp.model.mmp.TopicPromoterChange" id="topicPromoterChange">
				<id column="topic_channel_id" property="topicChannelId"/>
				<result column="topic_change_id" property="topicChangeId"/>
				<result column="topic_id" property="topicId"/>
				<result column="promoter_id" property="promoterId"/>
				<result column="promoter_name" property="promoterName"/>
				<result column="channel_code" property="channelCode"/>
				<result column="create_user" property="createUser"/>
				<result column="create_time" property="createTime"/>
	</resultMap>
	
	<sql id="columns">
		topic_channel_id,<include refid="columnsByInsert"></include>
	</sql>
	<sql id="columnsByInsert">
		topic_change_id,topic_id,promoter_id,promoter_name,channel_code,create_user,create_time
	</sql>
	<insert id="batchInsert" parameterType="list">
        insert into mmp_topic_promoter_change
	       (<include refid="columnsByInsert"></include>)
        values
        <foreach collection="list" item="item" index="index" separator=",">
	      (#{item.topicChangeId},#{item.topicId},#{item.promoterId},#{item.promoterName},#{item.channelCode},#{item.createUser},now())
   		</foreach>  
    </insert>
    <select id="queryListByTopicChangeId" resultMap="topicPromoterChange" parameterType="long">
    	select <include refid="columnsByInsert"></include> 
    	  from mmp_topic_promoter_change
    	 where topic_change_id=#{value}
    </select>
</mapper>